---
import { defaultLang, supportedLanguages } from "@/i18n/config";

/**
 * Custom 404 page — branded, bilingual, with Grialink logo.
 * Detects browser language to show the right copy.
 */
const langs = JSON.stringify(supportedLanguages);
const fallback = defaultLang;
---

<!doctype html>
<html
	lang={fallback}
	class="dark"
>
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1.0"
		/>
		<title>404 — Grialink</title>

		<link
			rel="preconnect"
			href="https://fonts.googleapis.com"
		/>
		<link
			rel="preconnect"
			href="https://fonts.gstatic.com"
			crossorigin
		/>
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:opsz,wght@14..32,300..800&display=swap"
			rel="stylesheet"
		/>

		<style>
			*,
			*::before,
			*::after {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			body {
				background: #0f1923;
				color: #f1f5f9;
				font-family: "Inter", system-ui, sans-serif;
				display: flex;
				align-items: center;
				justify-content: center;
				min-height: 100dvh;
				overflow: hidden;
			}

			.not-found {
				display: flex;
				flex-direction: column;
				align-items: center;
				text-align: center;
				gap: 1.25rem;
				padding: 2rem;
				animation: fadeIn 0.4s ease-out;
			}

			/* Logo */
			.logo-link {
				display: flex;
				align-items: center;
				gap: 0.625rem;
				text-decoration: none;
				color: #f1f5f9;
				margin-bottom: 0.5rem;
			}

			.logo-img {
				width: 48px;
				height: 48px;
				border-radius: 12px;
				object-fit: cover;
			}

			.logo-text {
				font-size: 1.5rem;
				font-weight: 700;
				letter-spacing: -0.02em;
			}

			/* Error code */
			.error-code {
				font-size: clamp(5rem, 15vw, 9rem);
				font-weight: 800;
				line-height: 1;
				background: linear-gradient(135deg, #fd7100 0%, #f8cb2e 100%);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-clip: text;
			}

			.error-title {
				font-size: 1.25rem;
				font-weight: 600;
				color: #f1f5f9;
			}

			.error-description {
				font-size: 0.9375rem;
				color: #94a3b8;
				max-width: 28rem;
				line-height: 1.6;
			}

			/* CTA button */
			.cta-btn {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				margin-top: 0.75rem;
				padding: 0.75rem 1.75rem;
				background: #fd7100;
				color: #fff;
				font-family: inherit;
				font-size: 0.9375rem;
				font-weight: 600;
				border: none;
				border-radius: 0.625rem;
				cursor: pointer;
				text-decoration: none;
				transition:
					background 0.2s ease,
					transform 0.2s ease,
					box-shadow 0.2s ease;
			}

			.cta-btn:hover {
				background: #e56500;
				transform: translateY(-1px);
				box-shadow: 0 0 24px rgba(253, 113, 0, 0.3);
			}

			.cta-btn:active {
				transform: translateY(0);
			}

			/* Decorative glow behind 404 */
			.glow-ring {
				position: absolute;
				width: 320px;
				height: 320px;
				border-radius: 50%;
				background: radial-gradient(circle, rgba(253, 113, 0, 0.08) 0%, transparent 70%);
				pointer-events: none;
				z-index: -1;
			}

			@keyframes fadeIn {
				from {
					opacity: 0;
					transform: translateY(12px);
				}
				to {
					opacity: 1;
					transform: translateY(0);
				}
			}

			@media (prefers-reduced-motion: reduce) {
				.not-found {
					animation: none;
				}
				.cta-btn {
					transition: none;
				}
			}
		</style>
	</head>

	<body>
		<div
			class="not-found"
			role="main"
		>
			<!-- Decorative glow -->
			<div
				class="glow-ring"
				aria-hidden="true"
			>
			</div>

			<!-- Logo -->
			<a
				class="logo-link"
				id="logo-link"
				href={`/${fallback}`}
			>
				<img
					class="logo-img"
					src="/logo.png"
					alt="Grialink"
					loading="eager"
					decoding="async"
					width="32"
					height="32"
				/>
				<span class="logo-text">Grialink</span>
			</a>

			<!-- 404 -->
			<p class="error-code">404</p>

			<h1
				class="error-title"
				id="error-title"
			>
				Página no encontrada
			</h1>

			<p
				class="error-description"
				id="error-desc"
			>
				Lo sentimos, la página que buscas no existe o fue movida. Vuelve al inicio para continuar explorando.
			</p>

			<a
				class="cta-btn"
				id="cta-btn"
				href={`/${fallback}`}
			>
				<svg
					width="18"
					height="18"
					viewBox="0 0 24 24"
					fill="none"
					stroke="currentColor"
					stroke-width="2"
					stroke-linecap="round"
					stroke-linejoin="round"
					aria-hidden="true"
				>
					<path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
					<polyline points="9 22 9 12 15 12 15 22"></polyline>
				</svg>
				<span id="cta-text">Volver al inicio</span>
			</a>
		</div>

		<script is:inline define:vars={{ langs, fallback }}>
			(function () {
				var supported = JSON.parse(langs);
				var navLang = (navigator.language || navigator.userLanguage || "").split("-")[0].toLowerCase();
				var lang = supported.indexOf(navLang) !== -1 ? navLang : fallback;

				// Update hrefs to point to the correct language
				var home = "/" + lang;
				var logoLink = document.getElementById("logo-link");
				var ctaBtn = document.getElementById("cta-btn");
				if (logoLink) logoLink.href = home;
				if (ctaBtn) ctaBtn.href = home;

				// Translate copy if English
				if (lang === "en") {
					var title = document.getElementById("error-title");
					var desc = document.getElementById("error-desc");
					var ctaText = document.getElementById("cta-text");
					if (title) title.textContent = "Page not found";
					if (desc)
						desc.textContent = "Sorry, the page you\u2019re looking for doesn\u2019t exist or has been moved. Go back home to keep exploring.";
					if (ctaText) ctaText.textContent = "Back to home";
				}
			})();
		</script>
	</body>
</html>
