---
/**
 * AboutHero â€” Mission hero section for the About page.
 * Adapted from design/history-vision.html hero, using our design system tokens.
 */
import { Image } from "astro:assets";
import Container from "@/components/ui/Container.astro";
import { type Lang } from "@/i18n/config";
import { getTranslations } from "@/i18n/utils";
import heroClinic from "@/assets/hero-clinic.jpg";

interface Props {
	lang: Lang;
}

const { lang } = Astro.props;
const hero = getTranslations(lang, "about") as Record<string, any>;
const h = hero.hero as Record<string, string>;
---

<section class="relative pt-32 pb-20 lg:pt-40 lg:pb-32 overflow-hidden">
	<!-- Decorative blobs -->
	<div
		class="absolute top-0 right-0 -mr-20 -mt-20 w-[600px] h-[600px] bg-primary/5 rounded-full blur-3xl pointer-events-none"
		aria-hidden="true"
	>
	</div>
	<div
		class="absolute bottom-0 left-0 -ml-20 -mb-20 w-[400px] h-[400px] bg-accent/10 rounded-full blur-3xl pointer-events-none"
		aria-hidden="true"
	>
	</div>

	<Container class="relative z-10 text-center">
		<!-- Badge -->
		<span
			class="inline-flex items-center gap-2 py-1 px-4 rounded-full bg-primary/10 text-primary text-sm font-semibold mb-6 border border-primary/20"
			data-animate
		>
			<span
				class="w-2 h-2 rounded-full bg-primary animate-pulse"
				aria-hidden="true"
			></span>
			{h.badge}
		</span>

		<!-- Heading -->
		<h1
			class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-extrabold tracking-tight text-foreground mb-6 leading-[1.08]"
			data-animate
		>
			{h.titleLine1}<br />
			<span class="text-primary">{h.titleHighlight}</span>
		</h1>

		<!-- Subtitle -->
		<p
			class="mt-4 max-w-2xl mx-auto text-xl text-muted-foreground leading-relaxed"
			data-animate
		>
			{h.subtitle}
		</p>

		<!-- Hero image -->
		<div
			class="mt-12 relative rounded-xl overflow-hidden shadow-2xl mx-auto max-w-4xl border border-border-light"
			data-animate
		>
			<Image
				src={heroClinic}
				alt={h.imageAlt}
				class="w-full h-[400px] md:h-[500px] object-cover bg-surface"
				loading="eager"
				decoding="async"
				fetchpriority="high"
				widths={[640, 1024, 1280]}
				sizes="(max-width: 768px) 100vw, 896px"
			/>
			<div class="absolute inset-0 bg-gradient-to-t from-black/40 to-transparent"></div>
			<div class="absolute bottom-6 left-6 text-left">
				<p class="text-white font-medium text-sm tracking-wide uppercase opacity-90">
					{h.imageOverlay}
				</p>
			</div>
		</div>
	</Container>
</section>
