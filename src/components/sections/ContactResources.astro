---
/**
 * ContactResources â€” Additional resource links (Help, Docs, Tutorials).
 */
import Container from "@/components/ui/Container.astro";
import { type Lang, localizedHref } from "@/i18n/config";
import { getTranslations } from "@/i18n/utils";

interface Props {
	lang: Lang;
}

const { lang } = Astro.props;
const c = getTranslations(lang, "contact") as Record<string, any>;
const resources = c.resources as Record<string, any>;
const items = resources.items as Array<{ label: string; href: string; color: string }>;

const iconPaths: Record<string, string> = {
	blue: "M9.879 7.519c1.171-1.025 3.071-1.025 4.242 0 1.172 1.025 1.172 2.687 0 3.712-.203.179-.43.326-.67.442-.745.361-1.45.999-1.45 1.827v.75M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9 5.25h.008v.008H12v-.008z",
	purple:
		"M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z",
	orange: "M5.25 5.653c0-.856.917-1.398 1.667-.986l11.54 6.348a1.125 1.125 0 010 1.971l-11.54 6.347a1.125 1.125 0 01-1.667-.985V5.653z",
};

const colorClasses: Record<string, { icon: string; hoverBorder: string; hoverBg: string; hoverText: string }> = {
	blue: {
		icon: "text-blue-500",
		hoverBorder: "hover:border-blue-500/30",
		hoverBg: "hover:bg-blue-500/5",
		hoverText: "group-hover:text-blue-500",
	},
	purple: {
		icon: "text-purple-500",
		hoverBorder: "hover:border-purple-500/30",
		hoverBg: "hover:bg-purple-500/5",
		hoverText: "group-hover:text-purple-500",
	},
	orange: {
		icon: "text-primary",
		hoverBorder: "hover:border-primary/30",
		hoverBg: "hover:bg-primary/5",
		hoverText: "group-hover:text-primary",
	},
};
---

<section class="section-spacing bg-background border-t border-border-light">
	<Container class="text-center">
		<h2
			class="text-2xl font-bold text-foreground mb-8"
			data-animate
		>
			{resources.title}
		</h2>

		<div
			class="flex flex-col sm:flex-row justify-center gap-4"
			data-animate
		>
			{
				items.map((item) => {
					const colors = colorClasses[item.color] ?? colorClasses.blue;
					const icon = iconPaths[item.color] ?? iconPaths.blue;

					return (
						<a
							href={localizedHref(item.href, lang)}
							class:list={[
								"group flex items-center justify-center gap-3 px-8 py-4 bg-card border border-border-light rounded-full transition-all duration-300 shadow-sm hover:shadow-md",
								colors.hoverBorder,
								colors.hoverBg,
							]}
						>
							<svg
								class:list={["w-5 h-5 group-hover:scale-110 transition-transform", colors.icon]}
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="1.5"
									d={icon}
								/>
							</svg>
							<span class:list={["font-medium text-muted-foreground transition-colors", colors.hoverText]}>{item.label}</span>
						</a>
					);
				})
			}
		</div>
	</Container>
</section>
