<!-- ═══════════════════════════════════════════════
     PRODUCT 4 — SALES DASHBOARD
     ═══════════════════════════════════════════════ -->
<section class="section-spacing bg-background-lighter relative overflow-hidden" id="sales-dashboard">
  <div class="absolute bottom-10 right-0 w-96 h-96 bg-emerald-500/5 rounded-full blur-3xl pointer-events-none" aria-hidden="true"></div>

  <Container>
    <div class="text-center mb-16" data-animate>
      <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-emerald-500/10 border border-emerald-500/20 text-emerald-400 text-xs font-semibold uppercase tracking-wider mb-4">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 013 19.875v-6.75zM9.75 8.625c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125v11.25c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V8.625zM16.5 4.125c0-.621.504-1.125 1.125-1.125h2.25C20.496 3 21 3.504 21 4.125v15.75c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V4.125z" /></svg>
        {showcase.salesDashboard.badge}
      </div>
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-foreground mb-4">
        {showcase.salesDashboard.title}
      </h2>
      <p class="text-lg text-muted-foreground max-w-3xl mx-auto">
        {showcase.salesDashboard.subtitle}
      </p>
    </div>

    <!-- Sales Dashboard view -->
    <div class="grid lg:grid-cols-2 gap-12 items-center" data-animate>
      <div class="relative group">
        <div class="absolute -inset-1 bg-gradient-to-r from-emerald-500/20 to-emerald-600/20 rounded-2xl blur opacity-0 group-hover:opacity-100 transition-opacity duration-500" aria-hidden="true"></div>
        <div class="relative rounded-2xl overflow-hidden border border-border shadow-2xl">
          <Image
            src={salesHub}
            alt={showcase.salesDashboard.viewImageAlt}
            class="w-full h-auto dark-only"
            loading="lazy"
            decoding="async"
            widths={[480, 768, 1024]}
            sizes="(max-width: 1024px) 100vw, 50vw"
          />
          <Image
            src={lightSalesHub}
            alt={showcase.salesDashboard.viewImageAlt}
            class="w-full h-auto light-only"
            loading="lazy"
            decoding="async"
            widths={[480, 768, 1024]}
            sizes="(max-width: 1024px) 100vw, 50vw"
          />
        </div>
      </div>
      <div>
        <h3 class="text-xl font-bold text-foreground mb-4">{showcase.salesDashboard.viewTitle}</h3>
        <p class="text-muted-foreground leading-relaxed mb-6">
          {showcase.salesDashboard.viewDescription}
        </p>
        <ul class="space-y-3">
          {(showcase.salesDashboard.viewFeatures as string[]).map((f: string) => (
            <li class="flex items-start gap-2 text-sm text-muted-foreground">
              <svg class="w-5 h-5 text-emerald-400 mt-0.5 shrink-0" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
              </svg>
              <span>{f}</span>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </Container>
</section>

<!-- ═══════════════════════════════════════════════
     COMING SOON — Future Products
     ═══════════════════════════════════════════════ -->
<section class="section-spacing bg-background-lighter relative overflow-hidden" id="coming-soon">
  <div class="absolute top-10 right-10 w-80 h-80 bg-primary/5 rounded-full blur-3xl pointer-events-none" aria-hidden="true"></div>

  <Container>
    <div class="text-center mb-16" data-animate>
      <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-accent/10 border border-accent/20 text-accent text-xs font-semibold uppercase tracking-wider mb-4">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.455 2.456L21.75 6l-1.036.259a3.375 3.375 0 00-2.455 2.456z"/></svg>
        {showcase.comingSoon.badge}
      </div>
      <h2 class="text-3xl sm:text-4xl font-bold text-foreground mb-4">
        {showcase.comingSoon.title}
      </h2>
      <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
        {showcase.comingSoon.subtitle}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-4xl mx-auto">
      {comingSoonProducts.map((product) => (
        <div
          class:list={[
            'relative p-8 rounded-2xl border bg-card transition-all duration-300 hover:-translate-y-1 hover:shadow-lg group',
            product.colors.border,
          ]}
          data-animate
        >
          <!-- Coming soon tag -->
          <div class="absolute top-4 right-4">
            <span class:list={['text-[10px] font-bold uppercase tracking-widest px-2 py-0.5 rounded-full', product.colors.bg, product.colors.text]}>
              {showcase.comingSoon.tag}
            </span>
          </div>

          <div class:list={['w-12 h-12 rounded-xl flex items-center justify-center mb-5', product.colors.bg, product.colors.text]}>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d={product.iconPath} />
            </svg>
          </div>

          <h3 class="text-lg font-bold text-foreground mb-2">{product.name}</h3>
          <p class="text-sm text-muted-foreground leading-relaxed">{product.description}</p>
        </div>
      ))}
    </div>
  </Container>
</section>
