---
/**
 * ProductIntegrations â€” Logo cloud for tool integrations (Google, Facebook, Apollo.io).
 */
import Container from "@/components/ui/Container.astro";
import { type Lang } from "@/i18n/config";
import { getTranslations } from "@/i18n/utils";

interface Props {
	lang: Lang;
}

const { lang } = Astro.props;
const p = getTranslations(lang, "productsPage") as Record<string, any>;
const integrations = p.integrations as Record<string, string>;
---

<section class="section-spacing bg-background border-b border-border-light">
	<Container class="text-center">
		<p
			class="text-sm font-medium text-muted-foreground uppercase tracking-widest mb-10"
			data-animate
		>
			{integrations.title}
		</p>

		<div
			class="flex flex-wrap justify-center items-center gap-12 lg:gap-24"
			data-animate
		>
			<!-- Google -->
			<div class="flex items-center gap-1.5 opacity-50 hover:opacity-100 transition-opacity duration-300">
				<svg
					class="h-7 w-7"
					viewBox="0 0 24 24"
					fill="none"
				>
					<path
						d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92a5.06 5.06 0 01-2.2 3.32v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.1z"
						fill="#4285F4"
					></path>
					<path
						d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
						fill="#34A853"
					></path>
					<path
						d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18A10.96 10.96 0 001 12c0 1.77.42 3.45 1.18 4.93l3.66-2.84z"
						fill="#FBBC05"
					></path>
					<path
						d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
						fill="#EA4335"
					></path>
				</svg>
				<span class="text-lg font-semibold text-foreground">Google</span>
			</div>

			<!-- Facebook -->
			<div class="flex items-center gap-2 opacity-50 hover:opacity-100 transition-opacity duration-300">
				<svg
					class="h-7 w-7 text-[#1877F2]"
					viewBox="0 0 24 24"
					fill="currentColor"
				>
					<path
						d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
					></path>
				</svg>
				<span class="text-lg font-semibold text-foreground">Facebook</span>
			</div>

			<!-- Apollo.io -->
			<div class="flex items-center gap-0.5 font-bold text-2xl tracking-tight opacity-50 hover:opacity-100 transition-opacity duration-300">
				<span class="text-foreground">Apollo</span><span class="text-primary">.io</span>
			</div>
		</div>
	</Container>
</section>
