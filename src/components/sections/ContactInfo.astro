---
/**
 * ContactInfo — Vertical sidebar with contact details.
 * Designed to sit alongside the form in a 2-column layout.
 */
import Container from "@/components/ui/Container.astro";
import { type Lang } from "@/i18n/config";
import { getTranslations } from "@/i18n/utils";

interface Props {
	lang: Lang;
}

const { lang } = Astro.props;
const c = getTranslations(lang, "contact") as Record<string, any>;
const info = c.info as Record<string, any>;
---

<div
	class="space-y-5 lg:sticky lg:top-24"
	data-animate
>
	<!-- Email -->
	<div class="bg-card rounded-2xl p-6 border border-border-light hover:shadow-lg hover:shadow-foreground/5 transition-shadow duration-300 group">
		<div class="flex items-start gap-4">
			<div
				class="w-12 h-12 rounded-xl bg-primary/10 text-primary flex items-center justify-center shrink-0 group-hover:scale-105 transition-transform duration-300"
			>
				<svg
					class="w-6 h-6"
					fill="none"
					stroke="currentColor"
					viewBox="0 0 24 24"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="1.5"
						d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"
					></path>
				</svg>
			</div>
			<div>
				<h3 class="text-base font-bold text-foreground mb-1">{info.email.title}</h3>
				<p class="text-muted-foreground text-sm mb-2">{info.email.description}</p>
				<a
					href={`mailto:${info.email.value}`}
					class="text-base font-semibold text-foreground hover:text-primary transition-colors"
				>
					{info.email.value}
				</a>
			</div>
		</div>
	</div>

	<!-- Phone / Chat — opens Chatwoot widget -->
	<button
		type="button"
		onclick="if(window.$chatwoot){window.$chatwoot.toggle('open')}else{window.open('https://app.grialink.com','_blank')}"
		class="w-full text-left bg-card rounded-2xl p-6 border border-border-light hover:shadow-lg hover:shadow-foreground/5 hover:border-blue-500/30 transition-all duration-300 group cursor-pointer"
	>
		<div class="flex items-start gap-4">
			<div
				class="w-12 h-12 rounded-xl bg-blue-500/10 text-blue-500 flex items-center justify-center shrink-0 group-hover:scale-105 transition-transform duration-300"
			>
				<svg
					class="w-6 h-6"
					fill="none"
					stroke="currentColor"
					viewBox="0 0 24 24"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="1.5"
						d="M8.625 9.75a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0H8.25m4.125 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0H12m4.125 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0h-.375m-13.5 3.01c0 1.6 1.123 2.994 2.707 3.227 1.087.16 2.185.283 3.293.369V21l4.184-4.183a1.14 1.14 0 01.778-.332 48.294 48.294 0 005.83-.498c1.585-.233 2.708-1.626 2.708-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0012 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018z"
					></path>
				</svg>
			</div>
			<div>
				<h3 class="text-base font-bold text-foreground mb-1">{info.phone.title}</h3>
				<p class="text-muted-foreground text-sm mb-2">{info.phone.description}</p>
				<p class="text-base font-semibold text-primary group-hover:text-primary-hover transition-colors">
					{info.phone.value}
				</p>
			</div>
		</div>
	</button>

	<!-- Schedule -->
	<div class="bg-card rounded-2xl p-6 border border-border-light hover:shadow-lg hover:shadow-foreground/5 transition-shadow duration-300 group">
		<div class="flex items-start gap-4">
			<div
				class="w-12 h-12 rounded-xl bg-green-500/10 text-green-500 flex items-center justify-center shrink-0 group-hover:scale-105 transition-transform duration-300"
			>
				<svg
					class="w-6 h-6"
					fill="none"
					stroke="currentColor"
					viewBox="0 0 24 24"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="1.5"
						d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z"
					></path>
				</svg>
			</div>
			<div>
				<h3 class="text-base font-bold text-foreground mb-1">{info.schedule.title}</h3>
				<p class="text-muted-foreground text-sm mb-2">{info.schedule.description}</p>
				<p class="text-base font-semibold text-foreground">{info.schedule.days}</p>
				<p class="text-sm text-muted-foreground">{info.schedule.hours}</p>
			</div>
		</div>
	</div>

	<!-- Trust indicator -->
	<div class="rounded-2xl p-5 border border-border-light bg-surface/50 text-center">
		<div class="flex items-center justify-center gap-2 mb-2">
			<svg
				class="w-4 h-4 text-green-400"
				fill="currentColor"
				viewBox="0 0 24 24"
			>
				<path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10ZM9 12l2 2 4-4"></path>
			</svg>
			<span class="text-xs font-semibold text-foreground uppercase tracking-wider">AES-256</span>
		</div>
		<p class="text-[11px] text-muted-foreground leading-relaxed">
			{lang === "es" ? "Tus datos están protegidos con encriptación de grado empresarial" : "Your data is protected with enterprise-grade encryption"}
		</p>
	</div>
</div>
